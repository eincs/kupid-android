<?xml version="1.0" encoding="utf-8"?>
<com.eincs.android.kupid.widget.CategoryItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/item_category_text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Something Important1"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/item_category_text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_category_text1"
        android:layout_below="@id/item_category_text1"
        android:text="Something Important2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</com.eincs.android.kupid.widget.CategoryItemView>