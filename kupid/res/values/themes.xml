<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="KAppTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.ActionBar</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="sdlDialogStyle">@style/KAppTheme.DialogStyleLight</item>
        <item name="searchAutoCompleteTextView">@style/SearchViewStyle</item>
    </style>

    <style name="KAppTheme.NoActionBar" parent="Theme.Sherlock.Light.NoActionBar">
        <item name="actionBarStyle">@style/Widget.ActionBar</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="KAppTheme.TranslucentActionBar" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="selectableItemBackground">@drawable/activated_item_background</item>
    </style>

    <style name="KAppTheme.Light.TranslucentActionBar" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.Light.ActionBar.Transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="KAppTheme.DialogStyleLight" parent="DialogStyleLight">
        <item name="titleTextColor">@color/crimson</item>
        <item name="titleSeparatorColor">@color/crimson</item>
    </style>

    <style name="SDL.Dialog" parent="android:Theme">
        <item name="sdlDialogStyle">@style/DialogStyleLight</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.Sherlock.SearchAutoCompleteTextView"></style>

</resources>